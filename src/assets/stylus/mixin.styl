@import '../../../node_modules/stylus-px2rem'
$bgcolor = #b4282d
$rem = 750/10rem
@media only screen and (-webkit-device-pixel-ratio:2)
  .border-1px
    &::before
      transform scaleY(.5)
@media only screen and (-webkit-device-pixel-ratio:3)
  .border-1px
    &::before
      transform scaleY(.3333)
/*底部一像素边框*/
bottom-border-1px($color)
  position relative
  border none
    &:after
      content ''
      position absolute
      bottom 0
      left 0
      width 100%
      height 1px
      background-color $color
      transform translateY(0.5)

/*顶部一像素边框*/
top-border-1px($color)
  position relative
  border none
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 1px
      background-color $color
      transform translateY(0.5)

